
@{
    ViewBag.Title = "Index";
}
<div class="col-lg-6">
    <div class="card" style="width:1400px; margin-left:0px;margin-top:16px">

        <div class="card-header d-flex align-items-center">
            <h3 class="h3">产品列表</h3>
        </div>
        <div>
            应用行业：<select id="selTrea" class="text_sketch" style="width:100px;height:30px">
                <option value="0">--请选择--</option>
            </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            归属地：<select id="selAddress" class="text_sketch" style="width:100px;height:30px">
                <option value="0">--请选择--</option>
            </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            产品阶段：<select id="selStage" class="text_sketch" style="width:100px;height:30px">
                <option value="0">--请选择--</option>
            </select><br /><br />
            产品经理：<select id="selManage" class="text_sketch" style="width:100px;height:30px">
                <option value="0">--请选择--</option>
            </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="txtname" type="text" style="width:150px;height:30px" placeholder="请输入产品名称" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <input id="ProductQuery" type="button" value="搜索" class="btn btn-primary" />

            <input id="AddProduct" type="button" style="float:right" name="ck" value="添加产品" class="btn btn-danger" onclick="ProductAdd()" /><br /><br />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <td><input id="Checkbox1" type="checkbox" />全选</td>
                            <td>编号</td>
                            <td>产品名称</td>
                            <td>创建时间</td>
                            <td>产品经理</td>
                            <td>应用行业</td>
                            <td>归属地</td>
                            <td>产品阶段</td>
                            <td>详情</td>
                            <td>操作</td>
                        </tr>
                    </thead>
                    <tbody id="tb"></tbody>
                </table>
            </div>
        </div>
        <div>
            <input id="DelProduct" type="button" style="float:left" name="ck" value="批量删除" class="btn btn-danger" onclick="Delete()" />
        </div>
    </div>
        </div>

        <script src="~/Scripts/jquery-3.3.1.min.js"></script>

        <script>
            $().ready(function () {

                //菜单样式
                $("#productlist").addClass("active");

                //获取应用行业
                $.ajax({
                    url: "/Product/GetTreade",
                    type: "POST",
                    dataType: "json",
                    success: function (res) {
                        $(res.Trades).each(function () {
                            var tp = "<option value='" + this.TradeId + "'>" + this.TradeName + "</option>"
                            $("#selTrea").append(tp);
                        })
                    }
                })
                //获取产品阶段
                $.ajax({
                    url: "/Product/GetStages",
                    type: "POST",
                    dataType: "json",
                    success: function (res) {
                        $(res.Stages).each(function () {
                            var tp = "<option value='" + this.StageId + "'>" + this.StageName + "</option>"
                            $("#selStage").append(tp);
                        })
                    }
                })
                //获取归属地
                $.ajax({
                    url: "/Product/GetAddress",
                    type: "POST",
                    dataType: "json",
                    success: function (res) {
                        $(res.TrAddress).each(function () {
                            var tp = "<option value='" + this.AddressId + "'>" + this.AddressName + "</option>"
                            $("#selAddress").append(tp);
                        })
                    }
                })
                //获取产品经理
                $.ajax({
                    url: "/Product/GetManage",
                    type: "POST",
                    dataType: "json",
                    success: function (res) {
                        $(res.Manages).each(function () {
                            var tp = "<option value='" + this.UserId + "'>" + this.UName + "</option>"
                            $("#selManage").append(tp);
                        })
                    }
                })

                //全选/反选
                $("#Checkbox1").click(function () {
                    $("[type=checkbox]").each(function () {
                        this.checked = $("#Checkbox1").prop("checked");
                    })
                })

                QueryProduct();
            })
            //查询列表
            function QueryProduct() {
                var query = {
                    TradeId: $("#selTrea").val(),
                    StageId: $("#selStage").val(),
                    AddressId: $("#selAddress").val(),
                    ProductId: $("#selManage").val(),
                    ProductName: $("#txtname").val()
                }

                //产品列表显示
                $.ajax({
                    url: "/Product/GetProducts",
                    type: "POST",
                    dataType: "json",
                    data: {
                        Query: query
                    },
                    success: function (res) {
                        var i = 1001;
                        var ts = "";
                        $(res.Products).each(function () {
                            ts += "<tr>"
                                + "<td><input id='Checkbox1' name='ck' type='checkbox' value='" + this.ProductId + "' /></td>"
                                + "<td>" + i + "</td>"
                                + "<td>" + this.ProductName + "</td>"
                                + "<td>" + ChangeDateFormat(this.CreateTime) + "</td>"
                                + "<td>" + this.UName + "</td>"
                                + "<td>" + this.TradeName + "</td>"
                                + "<td>" + this.AddressName + "</td>"
                                + "<td>" + this.StageName + "</td>"
                                + "<td>" + this.ProductDetail + "</td>"
                                + "<td><a href='/Product/ProductUpdatePage?PId=" + this.ProductId + "'>修改</a></td>"
                                + "</tr>";
                            i++;
                        })
                        $("#tb").html(ts);
                    }
                })

                $("#ProductQuery").click(function () {

                    QueryProduct();
                })
            }
            //时间转换
            function ChangeDateFormat(val) {
                if (val != null) {
                    var date = new Date(parseInt(val.replace("/Date(", "").replace(")/", ""), 10));
                    //月份为0-11，所以+1，月份小于10时补个0
                    var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                    var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                    return date.getFullYear() + "-" + month + "-" + currentDate;
                }
                return "";
            }

            //删除产品信息（逻辑删除）
            function Delete() {
                var ids = "";

                //拼接
                val = $("[name='ck']:checked").each(function () {
                    ids = ids + $(this).val() + ',';
                })
                //截取字符串
                ids = ids.substring(0, ids.length - 1);

                if (ids == "") {
                    alert("请选择您要删除的信息");
                    return;
                }
                //删除
                if (confirm("确认删除吗")) {
                    $.ajax({
                        url: "/Product/DeleteProduct",
                        type: "POST",
                        dataType: "json",
                        data: {
                            ids
                        },
                        success: function (res) {
                            if (res.Status) {
                                alert(res.Message);
                                QueryProduct();
                            }
                            else {
                                alert(res.Message);
                            }
                        }
                    });
                }
            }
            //添加跳转页面
            function ProductAdd() {
                location.href = "/Product/ProductAddPage";
            }
        </script>

