
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>重置密码</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/ReferencesFile/Template/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/ReferencesFile/Template/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Fontastic Custom icon font-->
    <link href="~/ReferencesFile/Template/css/fontastic.css" rel="stylesheet" />
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- theme stylesheet-->
    <link href="~/ReferencesFile/Template/css/style.default.css" rel="stylesheet" />
    <!-- Custom stylesheet - for your changes-->
    <link href="~/ReferencesFile/Template/css/custom.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/ReferencesFile/Template/Icon/ResetPassword.png">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <div class="page login-page">
        <div class="container d-flex align-items-center">
            <div class="form-holder has-shadow">
                <div class="row">
                    <!-- Logo & Information Panel-->
                    <div class="col-lg-6">
                        <div class="info d-flex align-items-center">
                            <div class="content">
                                <div class="logo">
                                    <h1>后台产品管理系统</h1>
                                </div>
                                <p>Background product management system.</p>
                            </div>
                        </div>
                    </div>
                    <input id="hideusername" type="hidden" value="@ViewBag.UserName" />
                    <!-- Form Panel    -->
                    <div class="col-lg-6 bg-white">
                        <div class="form d-flex align-items-center">
                            <div class="content">
                                <form class="form-validate">
                                    <div class="form-group">
                                        <input id="newpassword" type="password" name="registerUsername" required data-msg="Please enter your username" class="input-material">
                                        <label for="newpassword" class="label-material">新密码_NewPassword</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="checkpassword" type="password" name="registerEmail" required data-msg="Please enter a valid email address" class="input-material">
                                        <label for="checkpassword" class="label-material">确认密码_CheckPassword</label>
                                    </div>
                                    <a id="Save" style="color:white" class="btn btn-primary">保存_Save</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript files-->
    <script src="~/ReferencesFile/Template/vendor/jquery/jquery.min.js"></script>
    <script src="~/ReferencesFile/Template/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/ReferencesFile/Template/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/ReferencesFile/Template/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/ReferencesFile/Template/vendor/chart.js/Chart.min.js"></script>
    <script src="~/ReferencesFile/Template/vendor/jquery-validation/jquery.validate.min.js"></script>
    <!-- Main File-->
    <script src="~/ReferencesFile/Template/js/front.js"></script>
</body>
</html>


<script>

    $("#Save").click(function () {

        if ($("#newpassword").val() != $("#checkpassword").val()) {
            alert('两次输入密码不一致');
            return;
        }

        var obj = {
            UserName: $("#hideusername").val(),
            NewPassword: $("#newpassword").val()
        };

        $.ajax({
            url: "/User/ResetUserPassword",
            type: "POST",
            data: obj,
            dataType: "json",
            success: function (res) {
                if (res.Status) {
                    alert(res.Message);
                    location.href = '/User/UserLogin';
                }
                else {
                    alert(res.Message);
                }
            }
        });

    });

</script>